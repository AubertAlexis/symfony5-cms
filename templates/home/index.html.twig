{% extends "base.html.twig" %}

{% block body %}

	<div class="container mt-5">
		<div class="row">
			<div class="col-12">
				<h1>{{ home.title }}</h1>
			</div>
		</div>

		<hr class="my-4">

		<div class="jumbotron">
			<div class="row text-center mb-5">
				<div class="col-12 mb-5">
					<h2>{{ home.aboutTitle }}</h2>
				</div>

				<div class="col-md-6">
					<img src="{{ vich_uploader_asset(home, 'aboutImageFile') }}" alt="{{ home.aboutTitle }}">
				</div>
				<div class="col-md-6">
					<p>{{ home.aboutText }}</p>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
