{% extends "admin/base.html.twig" %}

{% block title "profile.title.title"|trans %}

{% block title_h1 "profile.title.h1"|trans %}

{% block body %}
    <div class="card shadow mt-3">
        <div class="card-header d-flex align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">{{ "profile.title.form"|trans }}</h5>
            <a href="{{ path('admin_profile_password') }}" class="btn btn-danger btn-icon-split btn-sm ml-auto">
                <span class="icon text-white-50"><i class="fas fa-key"></i></span>
                <span class="text">{{ "profile.button.resetPassword"|trans }}</span>
            </a>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-4 col-md-12">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-lg-4 col-md-12">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-12">
                        {{ form_row(form.username) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        {{ form_row(form.email) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 text-center mt-3">
                        {{ form_row(form.submit) }}
                    </div>
                </div>

                {{ form_row(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>

    
{% endblock %}
