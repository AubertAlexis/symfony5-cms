{% import "partials/_macro.html.twig" as macros %}

{% trans_default_domain 'navigation' %}

<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
        <div class="sidebar-brand-icon rotate-n-15">
            <i class="fas fa-laugh-wink"></i>
        </div>
        <div class="sidebar-brand-text mx-3">{{ website_name }}</div>
    </a>

    <hr class="sidebar-divider my-0">

    <li class="nav-item {{ macros.is_active('admin_dashboard') }}">
        <a class="nav-link" href="{{ path('admin_dashboard_index') }}">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>{{ "navigation.dashboard"|trans }}</span>
        </a>
    </li>

    <hr class="sidebar-divider my-0">

    <li class="nav-item {{ macros.is_active('admin_home_page') }}">
        <a class="nav-link" href="{{ path('admin_home_page_edit') }}">
            <i class="fas fa-fw fa-home"></i>
            <span>{{ "navigation.homePage"|trans }}</span>
        </a>
    </li>

    <hr class="sidebar-divider my-0">

    <li class="nav-item {{ macros.is_active('admin_nav') }} {{ macros.is_active('admin_sub') }}">
        <a class="nav-link" href="{{ path('admin_nav_index') }}">
            <i class="fas fa-fw fa-ellipsis-v"></i>
            <span>{{ "navigation.nav"|trans }}</span>
        </a>
    </li>

    <hr class="sidebar-divider my-0">

    <li class="nav-item {{ macros.is_active('admin_page') }}">
        <a class="nav-link" href="{{ path('admin_page_index') }}">
            <i class="fas fa-fw fa-folder"></i>
            <span>{{ "navigation.page"|trans }}</span>
        </a>
    </li>

    <hr class="sidebar-divider my-0">

    <li class="nav-item {{ macros.is_active('admin_setting') }}">
        <a class="nav-link" href="{{ path('admin_setting_edit') }}">
            <i class="fas fa-fw fa-cogs"></i>
            <span>{{ "navigation.setting"|trans }}</span>
        </a>
    </li>

    {% if is_granted("ROLE_DEV") %}
        <hr class="sidebar-divider my-0">

        <li class="nav-item {{ macros.is_active('admin_template') }}">
            <a class="nav-link" href="{{ path('admin_template_index') }}">
                <i class="fas fa-fw fa-clone"></i>
                <span>{{ "navigation.template"|trans }}</span>
            </a>
        </li>
    {% endif %}

    <hr class="sidebar-divider d-none d-md-block">

    <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
    </div>

</ul>
