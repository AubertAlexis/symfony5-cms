{% trans_default_domain 'modal' %}

<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ "modal.logout.title"|trans }}</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">{{ "modal.logout.content"|trans }}</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">{{ "modal.logout.buttons.cancel"|trans }}</button>
                <a class="btn btn-primary" href="{{ path('logout') }}">{{ "modal.logout.buttons.action"|trans }}</a>
            </div>
        </div>
    </div>
</div>