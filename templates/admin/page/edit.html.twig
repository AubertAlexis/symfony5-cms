{% extends "admin/base.html.twig" %}
{% form_theme form "admin/form/_page.html.twig" %}

{% block title "page.title.title"|trans %}

{% block title_h1 "page.title.h1"|trans %}

{% block body %}
	<div class="card shadow mt-3">
		<div class="card-header d-flex align-items-center">
			<h6 class="m-0 font-weight-bold text-primary">{{ "page.title.form"|trans }}</h5>
		</div>
		<div class="card-body">
			{{ form_start(form, {'attr': {'id': 'text_editor', 'data-page-id': app.request.attributes.get('id') }}) }}
				<div class="row">
					<div class="col-lg-3 col-md-6 col-sm-12">
						{{ form_row(form.title) }}
					</div>
				</div>

				<div class="row">
					<div class="col-lg-8 col-md-12 col-sm-12">
						{{ form_row(form.slug) }}
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						{{ form_row(form.content) }}
					</div>
				</div>

				<div class="row">
					<div class="col-12 text-center mt-3">
						{{ form_row(form.submit) }}
					</div>
				</div>

				{{ form_row(form._token) }}

			{{ form_end(form, {"render_rest": false}) }}
		</div>
	</div>

{% endblock %}

{% block javascripts %}
	<link href="{{ asset('build/js/skins/content/default/content.min.css.map') }}"></link>
	<link href="{{ asset('build/js/skins/ui/oxide/skin.min.css.map') }}"></link>
	
	{{ encore_entry_script_tags("tinymce") }}
{% endblock %}
