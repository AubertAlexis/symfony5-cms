{% extends "admin/base.html.twig" %}
{% form_theme form _self %}

{% block title "page.title.title"|trans %}

{% block title_h1 "page.title.h1"|trans %}

{% block body %}
	<div class="card shadow mt-3">
		<div class="card-header d-flex align-items-center">
			<h6 class="m-0 font-weight-bold text-primary">{{ "page.title.form"|trans }}</h5>
		</div>
		<div class="card-body">
			{{ form_start(form) }}
			
			<div class="row">
				<div class="col-lg-3 col-md-6 col-sm-12">
					{{ form_row(form.title) }}
				</div>
			</div>

			<div class="row">
				<div class="col-lg-8 col-md-12 col-sm-12">
					{{ form_row(form.slug) }}
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6 col-md-8 col-sm-12">
					{{ form_row(form.content) }}
				</div>
			</div>

			<div class="row">
				<div class="col-12 text-center mt-3">
					{{ form_row(form.submit) }}
				</div>
			</div>

			{{ form_row(form._token) }}

			{{ form_end(form, {"render_rest": false}) }}
		</div>
	</div>


{% endblock %}

{% block _page_slug_widget %}
	<div class="d-flex align-items-center mb-2">
		<p class="font-weight-bold mb-0">{{ app.request.getSchemeAndHttpHost() ~ "/page/" }}</p>
		{{ form_widget(form) }}
	</div>
{% endblock %}