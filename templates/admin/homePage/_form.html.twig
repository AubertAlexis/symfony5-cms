{% block header %}
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-12">
			{{ form_row(form.title) }}
		</div>
	</div>
{% endblock header %}

{% block about %}
	<div class="row">
		<div class="col-lg-6 col-md-8 col-sm-12">
			{{ form_row(form.aboutTitle) }}
		</div>
	</div>

	<div class="row">
		<div class="col-8">
			{{ form_row(form.aboutImageFile) }}
		</div>
		{% if homePage %}
			<div class="col-4 text-center">
				<img src="{{ vich_uploader_asset(homePage, "aboutImageFile") }}" class="mt-2 image-min">
			</div>
		{% endif %}
	</div>

	<div class="row">
		<div class="col-lg-12">
			{{ form_row(form.aboutText) }}
		</div>
	</div>
{% endblock about %}

{% block submit %}
	{{ form_row(form._token) }}
	<div class="col-12">
		<hr>
	</div>
	<div class="col-12">
		<div class="card shadow">
			<div class="card-body">
				<div class="d-flex justify-content-center align-items center">
					{{ form_row(form.submit) }}
				</div>
			</div>
		</div>
	</div>
{% endblock submit %}